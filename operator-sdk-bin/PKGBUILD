pkgname=operator-sdk-bin
pkgver=0.19.2
pkgrel=1
epoch=
pkgdesc="SDK for building Kubernetes applications. Provides high level APIs, useful abstractions, and project scaffolding."
arch=("x86_64")
url=""
license=('Apache 2.0')
source=("https://github.com/operator-framework/operator-sdk/releases/download/v${pkgver}/operator-sdk-v${pkgver}-x86_64-linux-gnu")
sha256sums=("b9d6db66c25d007ac0988c28ac49e40281f46f95c97579bee446c2a8946cfdee")

package() {
          mkdir -p $pkgdir/usr/bin
          cp ./operator-sdk-v${pkgver}-x86_64-linux-gnu $pkgdir/usr/bin/operator-sdk
          chmod 755 $pkgdir/usr/bin/operator-sdk
}
